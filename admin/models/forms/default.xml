<?xml version="1.0" encoding="UTF-8"?>
<form
	addrulepath="/administrator/components/com_jexbooking/models/rules"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_JEXBOOKING_DEFAULT_PRICES_NAME_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_NAME_DESC"
			required="true"
			class="inputbox"
			size="80"
			default=""
		/>	
		<field
			name="start_date"
			type="calendar"
			label="COM_JEXBOOKING_DEFAULT_PRICES_START_DATE_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_START_DATE_DESC"
			required="true"
			default="dd-mm-jjjj"
			format="%d-%m-%Y"			
		/>	
		<field
			name="end_date"
			type="calendar"
			label="COM_JEXBOOKING_DEFAULT_PRICES_END_DATE_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_END_DATE_DESC"
			required="true"			
			format="%d-%m-%Y"
			default="dd-mm-jjjj"			
		/>
		<field
			name="min_price"
			type="text"
			label="COM_JEXBOOKING_DEFAULT_PRICES_MIN_PRICE_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_MIN_PRICE_DESC"
			required="true"
			default="0.00"
		/>
		<field
			name="extra"
			type="text"
			label="COM_JEXBOOKING_DEFAULT_PRICES_EXTRA_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_EXTRA_DESC"
			required="true"
			default="0.00"
		/>
		<field
			name="is_pn_extra"
			type="radio"
			label="COM_JEXBOOKING_DEFAULT_PRICES_EXTRA_PN_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_EXTRA_PN_DESC"
			required="true"
			default="1"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field
			name="location_id"
			type="defaultlocation"
			label="COM_JEXBOOKING_DEFAULT_PRICES_LOCATION_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_LOCATION_DESC"
			default=""
			required="true"
		/>		
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JSTATUS"
			default="0"
		>
			<option value="0">JUNPUBLISHED</option>
			<option value="1">JPUBLISHED</option>
		</field>	
	</fieldset>		
</form>