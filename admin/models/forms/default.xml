<?xml version="1.0" encoding="UTF-8"?>
<form
	addrulepath="/administrator/components/com_jexbooking/models/rules"
>
	<fieldset name="details">
		<field
			name="id"
			type="hidden"
		/>
		<field
			name="name"
			type="text"
			label="COM_JEXBOOKING_DEFAULT_PRICES_NAME_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_NAME_DESC"
			required="true"
			class="inputbox"
			size="80"
			default=""
		/>	
		<field
			name="start_date"
			type="calendar"
			label="COM_JEXBOOKING_DEFAULT_PRICES_START_DATE_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_START_DATE_DESC"
			required="true"
			default="dd-mm-jjjj"
			format="%d-%m-%Y"			
		/>	
		<field
			name="end_date"
			type="calendar"
			label="COM_JEXBOOKING_DEFAULT_PRICES_END_DATE_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_END_DATE_DESC"
			required="true"			
			format="%d-%m-%Y"
			default="dd-mm-jjjj"			
		/>
		<field
			name="min_price"
			type="text"
			label="COM_JEXBOOKING_DEFAULT_PRICES_MIN_PRICE_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_MIN_PRICE_DESC"
			required="true"
			default="0.00"
		/>
		<field
			name="extra"
			type="text"
			label="COM_JEXBOOKING_DEFAULT_PRICES_EXTRA_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_EXTRA_DESC"
			required="true"
			default="0.00"
		/>
		<field
			name="is_pn_extra"
			type="radio"
			label="COM_JEXBOOKING_DEFAULT_PRICES_EXTRA_PN_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_EXTRA_PN_DESC"
			required="true"
			default="1"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field
			name="pp_extra"
			type="text"
			label="COM_JEXBOOKING_DEFAULT_PRICES_EXTRA_PP_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_EXTRA_PP_DESC"
			required="true"
			default="0.00"
		/>
		<field
			name="use_pp_extra"
			type="radio"
			label="COM_JEXBOOKING_DEFAULT_PRICES_USE_EXTRA_PP_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_USE_EXTRA_PP_DESC"
			required="true"
			default="0"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		<field
			name="location_id"
			type="defaultlocation"
			label="COM_JEXBOOKING_DEFAULT_PRICES_LOCATION_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_LOCATION_DESC"
			default=""
			required="true"
		/>
		<field
			name="is_default"
			type="list"
			label="COM_JEXBOOKING_DEFAULT_PRICES_IS_DEFAULT_LABEL"
			description="COM_JEXBOOKING_DEFAULT_PRICES_IS_DEFAULT_DESC"
			default="0"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>		
		<field
			name="published"
			type="list"
			label="JSTATUS"
			description="JSTATUS"
			default="0"
		>
			<option value="0">JUNPUBLISHED</option>
			<option value="1">JPUBLISHED</option>
		</field>
	</fieldset>
	
	<fieldset name="details">
		<field
			name="use_day_prices"
			type="list"
			label="COM_JEXBOOKING_DEFAULT_USE_DAY_PRICES_LABEL"
			description="COM_JEXBOOKING_DEFAULT_USE_DAY_PRICES_DESC"
			default="0"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="sunday"
			type="text"
			label="COM_JEXBOOKING_DAY_PRICE_SUNDAY_LABEL"
			description="COM_JEXBOOKING_DAY_PRICE_SUNDAY_DESC"
			default="0.00"
		/>
		<field
			name="monday"
			type="text"
			label="COM_JEXBOOKING_DAY_PRICE_MONDAY_LABEL"
			description="COM_JEXBOOKING_DAY_PRICE_MONDAY_DESC"
			default="0.00"
		/>
		<field
			name="tuesday"
			type="text"
			label="COM_JEXBOOKING_DAY_PRICE_TUESDAY_LABEL"
			description="COM_JEXBOOKING_DAY_PRICE_TUESDAY_DESC"
			default="0.00"
		/>
		<field
			name="wednesday"
			type="text"
			label="COM_JEXBOOKING_DAY_PRICE_WEDNESDAY_LABEL"
			description="COM_JEXBOOKING_DAY_PRICE_WEDNESDAY_DESC"
			default="0.00"
		/>
		<field
			name="thursday"
			type="text"
			label="COM_JEXBOOKING_DAY_PRICE_THURSDAY_LABEL"
			description="COM_JEXBOOKING_DAY_PRICE_THURSDAY_DESC"
			default="0.00"
		/>
		<field
			name="friday"
			type="text"
			label="COM_JEXBOOKING_DAY_PRICE_FRIDAY_LABEL"
			description="COM_JEXBOOKING_DAY_PRICE_FRIDAY_DESC"
			default="0.00"
		/>
		<field
			name="saturday"
			type="text"
			label="COM_JEXBOOKING_DAY_PRICE_SATURDAY_LABEL"
			description="COM_JEXBOOKING_DAY_PRICE_SATURDAY_DESC"
			default="0.00"
		/>
	</fieldset>
</form>